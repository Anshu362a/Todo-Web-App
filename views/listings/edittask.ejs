<% layout('layouts/boilerplate') %>

<h3>Edit your task</h3>

<div class="row justify-content-center mt-5">
    <div class="col-md-6 mb-3">
        
        <h2 class="mb-3">Edit your task</h2>
        <p> Previous task: <%= task.description %></p>
        <form method="post" action="/edittask/<%=task._id %>?_method=PUT" novalidate class="needs-validation d-flex">
            <input 
            name="description"
            class="form-control me-2"
            placeholder="Add Task"
            value="<%= task.description %>"
            required
            />
            <button type="submit" class="btn btn-orange">UpdateTask</button>
        </form>
    </div>
</div>