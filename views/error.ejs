<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
    <p class="alert-heading mb-0"><%= message %></p>
    
    <button 
      type="button" 
      class="btn-close" 
      data-bs-dismiss="alert" 
      aria-label="Close">
    </button>
  </div>

  <div class="col-6 offset-3 text-center mt-3">
    <a href="/" class="btn btn-outline-danger">
      ⬅️ Go to Home
    </a>
  </div>



</div>
